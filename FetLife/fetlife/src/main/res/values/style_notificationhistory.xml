<resources>
    <style name="NotificationHistoryItem">
        <item name="android:background">@drawable/listitem_background_rounded</item>
        <item name="android:padding">@dimen/listitem_padding</item>
        <item name="android:layout_marginTop">@dimen/listitem_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/listitem_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/listitem_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/listitem_horizontal_margin</item>
    </style>

    <style name="NotificationHistoryHeader" parent="TextAppearance.AppCompat.Title">
        <item name="android:gravity">top</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="NotificationHistoryTime" parent="TextAppearance.AppCompat.Caption">
        <item name="android:gravity">right</item>
    </style>

    <style name="NotificationHistoryText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginBottom">@dimen/listitem_vertical_margin</item>
    </style>

    <style name="NotificationHistoryRejectLayout" parent="NotificationHistoryItem">
        <item name="android:background">@drawable/listitem_background_reject_rounded</item>
        <item name="android:layout_marginRight">@dimen/listitem_background_margin_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/listitem_background_margin_horizontal</item>
    </style>

    <style name="NotificationHistoryDecisionText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:padding">@dimen/listitem_padding</item>
    </style>

</resources>
