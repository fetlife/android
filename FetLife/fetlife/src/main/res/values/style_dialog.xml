<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DialogContainer">
        <item name="android:background">@color/window_background</item>
    </style>

    <style name="DialogTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="DialogMessage" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="DialogInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:theme">@style/AppTheme.Secondary_Accent</item>
        <item name="android:textColorHint">@color/color_secondary</item>
        <item name="android:colorAccent" tools:ignore="NewApi">@color/color_secondary</item>
    </style>

    <style name="DialogEditText" parent="Widget.AppCompat.EditText">
        <item name="android:theme">@style/AppTheme.Secondary_Accent</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="DialogCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:theme">@style/AppTheme.Secondary_Accent</item>
    </style>

    <style name="DialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/text_color_link</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
